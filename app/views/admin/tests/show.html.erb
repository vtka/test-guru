<div class="container">
  <h5 class="mt-4"><%= @test.title %></h5>

  <%= link_to t('actions.add'), new_admin_test_question_path(@test), class: 'btn btn-primary' %>
  <%= link_to t('actions.back'), admin_tests_path, class: 'btn btn-primary' %><br>

  <% if @test.time_limit > 0 %>
    <h6 class="mb-4"><%= t('.time_limit') %>: <%= format_seconds(@test.time_limit) %></h3>
  <% end %>

  <table class="table table-hover col-md-6 mt-3">
    <tbody>
      <%= render @test.questions %>
    </tbody>
  </table>

  <%= link_to t('actions.edit'), edit_admin_test_path(@test), class: 'btn btn-warning' %>
</div>
