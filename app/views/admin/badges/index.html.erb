<div class="container">
  <h5 class="mt-4"><%= t('.header') %></h5>

  <%= link_to t('.new'), new_admin_badge_path, class: "btn btn-primary mb-2" %>

  <%= render 'shared/errors', resource: @badge %>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col"><%= t('.name') %></th>
        <th scope="col"><%= t('.description') %></th>
        <th scope="col"><%= t('.image') %></th>
        <th scope="col" colspan="3" class="text-center"><%= t('.actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @badges %>
    </tbody>
  </table>
</div>
