<div class="container">
  <h5 class="mt-4"><%= t('.header') %></h5>

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col"><%= t('.author') %></th>
        <th scope="col"><%= t('.question') %></th>
        <th scope="col"><%= t('.hash') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @gists %>
    </tbody>
  </table>
  <%= will_paginate @gists, previous_label: 'Back', next_label: 'Next' %>
</div>