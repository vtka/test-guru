<%= form_with model: [:admin, @badge], local: true, class: 'border border-light' do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <div class="form-group col-md-4 mt-2">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group col-md-4">
    <%= form.label :description %><br>
    <%= form.text_area :description, rows: 3, cols: 60, class: 'form-control' %>
  </div>
  <div class="form-group col-md-4">
      <%= form.label :rule %>:
      <%= form.select :rule, rule_type_options, {:prompt => true}, {:class => 'form-control'}  %>
  </div>
  <div class="form-group col-md-4">
      <%= form.text_field :value, id: :badge_rule_parameter, class: 'form-control', placeholder: :value %>
  </div>
  <div class="form-group col-md-4">
    <%= form.label :avatar %><br>
    <%= form.file_field :avatar, class: 'form-control' %>
  </div>
  <div class="form-group col-md-4">
    <button type="submit" class="btn btn-primary"><%= t('actions.save') %></button>
    <%= link_to t('actions.back'), admin_badges_path, class: 'btn btn-primary' %>
  </div>
<% end %>
