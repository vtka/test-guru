<%= form_with model: [:admin, @question, @answer], local: true, class: 'border border-light' do |form| %>
  <%= render 'shared/errors', resource: @answer %>
  <div class="form-group col-md-4 mt-2">
    <%= form.label :body %><br>
    <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60, class: 'form-control' %>
  </div>
  <div class="custom-control custom-checkbox mb-3 mt-3 admin-answer-checkbox">
    <%= form.check_box :correct, id: :answer_correct, class: 'custom-control-input' %>
    <%= form.label :correct, class: 'custom-control-label' %>
  </div>
  <div class="form-group col-md-4">
    <button type="submit" class="btn btn-primary"><%= t('actions.save') %></button>
    <%= link_to t('actions.back'), admin_question_path(@answer.question), class: 'btn btn-primary' %>
  </div>
<% end %>
